<table{% if modifier %} class="usa-table-{{ modifier }}"{% endif %}>
  <thead>
    <tr>
      {% for column in columns %}
      <th scope="col">{{ column.text }}</th>
      {% endfor %}
    </tr>
  </thead>
  <tbody>
    {% for row in rows %}
    <tr>
      {% for cell in row.cells %}
        {% if cell.scope %}<th scope="{{ cell.scope }}">
        {% else %}<td>{% endif %}
        {{ cell.text }}
        {% if cell.scope %}</th>{% else %}</td>{% endif %}
      {% endfor %}
    </tr>
    {% endfor %}
  </tbody>
</table>
